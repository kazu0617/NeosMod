    "version": "2.0.0",
    "tasks": [
        {
            "label": "build DesktopToolShortcutRemapper",
            "command": "dotnet",
            "type": "process",
            "args": [
                "build",
                "-noLogo",
                "${workspaceFolder}/DesktopToolShortcutRemapper/DesktopToolShortcutRemapper.csproj",
                "-p:Configuration=Release",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary"
